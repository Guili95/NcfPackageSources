{
  "$schema": "http://json.schemastore.org/template",
  "author": "Jeffrey",
  "classifications": [ "NCF", "XNCF" ],
  "name": "Custom XNCF Module Template",
  "identity": "XncfBuilder.Template",
  "groupIdentity": "Custom XNCF",
  "shortName": "XNCF",
  "description": "Template for XNCF Builder.",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "symbols": {
    "TargetFramework": {
      "type": "parameter",
      "datatype": "text",
      "description": "<TargetFramework> value",
      "fileRename": "Template_TargetFramework",
      "replaces": "Template_TargetFramework",
      "isRequired": true,
      "defaultValue": "netstandard2.1"
    },
    "UseSample": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "UseWeb": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "UseFunction": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "UseDatabase": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "UseWebApi": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "IntegrationToNcf": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true"
    },
    //Replace file name and content
    "XncfName": {
      "type": "parameter",
      "datatype": "text",
      "description": "XNCF Module's name",
      "fileRename": "Template_XncfName",
      "replaces": "Template_XncfName",
      "isRequired": true,
      "defaultValue": "MyXncf"
    },
    "OrgName": {
      "type": "parameter",
      "datatype": "text",
      "description": "XNCF Module's Organization Name",
      "fileRename": "Template_OrgName",
      "replaces": "Template_OrgName",
      "isRequired": true,
      "defaultValue": "MyOrg"
    },
    "Version": {
      "type": "parameter",
      "datatype": "text",
      "description": "XNCF Module's Version, like. 0.1, 0,2-alpha",
      "fileRename": "Template_Version",
      "replaces": "Template_Version",
      "isRequired": false,
      "defaultValue": "0.1"
    },
    "MenuName": {
      "type": "parameter",
      "datatype": "text",
      "description": "XNCF Module's Menu Name",
      "fileRename": "Template_MenuName",
      "replaces": "Template_MenuName",
      "isRequired": false,
      "defaultValue": "MyProject"
    },
    "Icon": {
      "type": "parameter",
      "datatype": "text",
      "description": "XNCF Module's Icon name",
      "fileRename": "Template_Icon",
      "replaces": "Template_Icon",
      "isRequired": false,
      "defaultValue": "fa fa-star"
    },
    "Description": {
      "type": "parameter",
      "datatype": "text",
      "description": "XNCF Module's Description",
      "fileRename": "Template_Description",
      "replaces": "Template_Description",
      "isRequired": false,
      "defaultValue": "Project's Description"
    },
    "Guid": {
      "type": "parameter",
      "datatype": "text",
      "description": "XNCF Module's Unique Guid",
      "fileRename": "Template_Guid",
      "replaces": "Template_Guid",
      "isRequired": true,
      "defaultValue": "WrongGuid"
    },
    "XncfBaseVersion": {
      "type": "parameter",
      "datatype": "text",
      "description": "Senparc.Ncf.XncfBase package version",
      "fileRename": "Template_XncfBase_Version",
      "replaces": "Template_XncfBase_Version",
      "isRequired": true,
      "defaultValue": "0.6.106-beta1"
    },
    "NcfAreaBaseVersion": {
      "type": "parameter",
      "datatype": "text",
      "description": "Senparc.Ncf.AreaBase package version",
      "fileRename": "Template_NcfAreaBase_Version",
      "replaces": "Template_NcfAreaBase_Version",
      "isRequired": true,
      "defaultValue": "0.6.114-beta1"
    },
    "NcfSwaggerVersion": {
      "type": "parameter",
      "datatype": "text",
      "description": "Senparc.Xncf.Swagger package version",
      "fileRename": "Template_XncfSwagger_Version",
      "replaces": "Template_XncfSwagger_Version",
      "isRequired": true,
      "defaultValue": "0.0.9-beta1"
    },
    "MicrosoftMvcVersion": {
      "type": "parameter",
      "datatype": "text",
      "description": "Microsoft.AspNetCore.Mvc.Versioning package version",
      "fileRename": "Template_MicrosoftMvc_Version",
      "replaces": "Template_MicrosoftMvc_Version",
      "isRequired": true,
      "defaultValue": "5.0.0"
    }
  },
  "sourceName": "Template_OrgName.Xncf.Template_XncfName",
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!UseSample)", //如果不添加 Sample，排除下面的文件
          "exclude": [
            "Areas/Admin/Pages/Template_XncfName/DatabaseSample.cshtml",
            "Areas/Admin/Pages/Template_XncfName/DatabaseSample.cshtml.cs",
            "Services/**"
          ]
        },
        {
          "condition": "(!UseFunction)", //如果不添加 Function，排除下面的文件
          "exclude": [
            "Functions/**"
          ]
        },
        {
          "condition": "(!UseWeb && !UseSample)", //如果不添加 UseWeb，排除下面的文件
          "exclude": [
            "Register.Area.cs",
            "Areas/**"
          ]
        },
        {
          "condition": "(!UseDatabase && !UseSample)", //如果不添加 数据库，排除下面的文件
          "exclude": [
            "Register.Database.cs",
            "Models/**",
            "Migrations/**"
          ]
        }
      ]
    }
  ],
  "exclude": [
    "**/bin",
    "**/bower_components",
    "**/jspm_packages",
    "**/node_modules",
    "**/obj",
    "**/platforms",
    "**/SenparcTraceLog"
  ]
}